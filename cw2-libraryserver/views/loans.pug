extends layout

block content
  div.page-wrapper
    h1= title
    p Welcome to #{title}
    p.info Please fill the form bellow to search the library book catalog.
    div.input-group.col-md-4.d-flex.column.col-centered
      div.d-flex.flex-row
        div(class="input-group-prepend")
          span.input-group-text#inputGroup-sizing Book Title:
        input(type="text" class="form-control" id="loans-title" aria-label="default" aria-describedby="inputGroup-sizing-md")
      div.d-flex.flex-row
        div(class="input-group-prepend")
          span.input-group-text#inputGroup-sizing ISBN:
        input(type="text" class="form-control" id="loans-isbn" aria-label="default" aria-describedby="inputGroup-sizing-md")
      div.d-flex.flex-row
        div(class="input-group-prepend")
          span.input-group-text#inputGroup-sizing Author:
        input(type="text" class="form-control" id="loans-author" aria-label="default" aria-describedby="inputGroup-sizing-md")
      div.d-flex.flex-row
        input(type='button' value='Search' class="btn btn-primary")#search-loan-book

    .results-output
      ul.search-ul

  script(src="/javascripts/users-script.js")
