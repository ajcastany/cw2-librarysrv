extends layout

block navigation
  nav
    ul
      #title
        if title == "Search the Library"
          li: a(href="/search" style={background: 'blue'}) Search
        else
          li: a(href="/search" style={}) Search

        if title == "Add Book"
          li: a(href="/add-book" style={background:'blue'}) Add Book
        else
          li: a(href="/add-book") Add Book

        if title == "Delete Entry"
          li: a(href="/delete-book" style={background: 'blue'}) Delete Entry
        else
          li: a(href="/delete-book" style={}) Delete Entry

block content
  h1= title
  p Welcome to #{title}
  p.info Please fill the form bellow to search the library catalog.
  form.search-form
    input(type='hidden' name='type' value='book')
    | Title: 
    input(type='text' name='title' placeholder='Book title')#search-book
    | ISBN:
    input(type='text' name='isbn' placeholder='ISBN')#search-isbn
    | Author:
    input(type='text' name='name' placeholder='Author')#search-author
    input(type='button' value='Search')#search-button

  h1 Results
  .results-output
    ul.search-ul

  script(src="/javascripts/script.js")

