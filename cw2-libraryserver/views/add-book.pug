extends layout
block navigation
  nav
    ul.nav.nav-tabs
        if title == "Search the Library"
          li.nav-item: a(href="/search" class="nav-link active") Search
        else
          li.nav-item: a(href="/search" class="nav-link") Search

        if title == "Add Book"
          li.nav-item: a(href="/add-book" class="nav-link active") Add Book
        else
          li.nav-item: a(href="/add-book" class="nav-link") Add Book

        if title == "Delete Entry"
          li.nav-item: a(href="/delete-book" class="nav-link active") Delete Entry
        else
          li.nav-item: a(href="/delete-book" class="nav-link") Delete Entry


block content
  h1= title
  p.info Fill the form bellow to add books to the Library Database
  div.form-container
    form.add-form
      input(type="hidden" name="type" value="book")
      | Title:
      input(type="text" name="title" placeholder="Book title")#add-book
      | ISBN:
      input(type="text" name="isbn" placeholder="ISBN")#add-isbn
      | Author:
      input(type="text" name="name" placeholder="Author").add-author-0
      input(type="button" value="Add")#add-button
    button#more-authors Add another author
  .add-status

  script(src="/javascripts/script.js")
